@model IEnumerable<asiakasrekisteri.Models.Asiakasluokittelu>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
<h2>Asiakasluokka</h2>
<form class="form-inline my-2 my-lg-0">
    <br />
    <input class="form-control mr-sm-2" type="text" href=@Html.TextBox("searching") >
    <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
</form>

@using (Html.BeginForm("Index", "Asiakasluokittelu", FormMethod.Get))
{


}
<br />
<table class=" table table-hover">
    <thead class="alert-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Toimiala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Liitto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LuokitteluID)
            </th>
            <th></th>
            <th></th>
            <th>
                <a type="Button" class="btn btn-info" href="@Url.Action("Create", "Asiakasluokittelu")">Lisää luokka</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:black">
                    No Match Any Document
                </td>
            </tr>
        }
        else
        {

            foreach (var item in Model)
            {
                <tr class="text-capitalize">
                    <td>
                        @Html.DisplayFor(modelItem => item.Toimiala)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Liitto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LuokitteluID)
                    </td>
                    <td></td>
                    <td></td>
                    <td>
                        <a type="Button" class="btn btn-info" href="@Url.Action("Details", "Asiakasluokittelu", new {id = item.LuokitteluID })">Lisätietoja</a>

                    </td>
                </tr>
            }
        }
    </tbody>
</table>
