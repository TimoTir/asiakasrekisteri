<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <nav class=" navbar navbar-expand-lg navbar-dark bg-info">
            <a class="navbar-brand" href=@Url.Action("Login", "Logins")>MyClient</a>
            <a class="navbar-brand" href=@Url.Action("LogOut", "Logins")>Logout</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#"><span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("Index", "Asiakastiedot")>Asiakastiedot</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("Index","Asiakasluokittelu")>Asiakasluokittelu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("Index","Laskutusosoite")>Laskutusosoitteet</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("Index","Postitoimipaikat")>Postitoimipaikat</a>
                    </li>
                </ul>

            </div>
        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Asiakasrekisteri</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
